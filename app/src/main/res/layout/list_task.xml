<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="10dp"
    android:background="@drawable/container_white2"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="S.No."
            android:textColor="#100f0f"
            android:layout_weight="0.7"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="serial number"
            android:textColor="#376e8c"
            android:id="@+id/serial_no"
            android:layout_weight="1"
            android:textSize="18sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efe8e8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Query Id"
            android:textColor="#100f0f"
            android:layout_weight="0.7"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="query id"
            android:id="@+id/query_id"
            android:textColor="#376e8c"
            android:layout_weight="1"
            android:textSize="18sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efe8e8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lead Detials"
            android:textColor="#100f0f"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.7"
            android:textSize="18sp"/>
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lead name"
                android:id="@+id/lead_name"
                android:layout_weight="1"
                android:textColor="#376e8c"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lead phone"
                android:id="@+id/lead_phone"
                android:layout_weight="1"
                android:textColor="#376e8c"
                android:textSize="18sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lead details"
                android:textColor="#376e8c"
                android:id="@+id/lead_details"
                android:layout_weight="1"
                android:textSize="18sp"/>

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efe8e8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Assigned User"
            android:textColor="#100f0f"
            android:layout_weight="0.7"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="assigned user"
            android:textColor="#376e8c"
            android:id="@+id/assigned_user"
            android:layout_weight="1"
            android:textSize="18sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efe8e8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Date-Time"
            android:textColor="#100f0f"
            android:layout_weight="0.7"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="task date-time"
            android:textColor="#376e8c"
            android:id="@+id/task_date_time"
            android:layout_weight="1"
            android:textSize="18sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efe8e8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:textColor="#100f0f"
            android:layout_height="wrap_content"
            android:text="Task Type"
            android:layout_weight="0.7"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="task type"
            android:textColor="#376e8c"
            android:id="@+id/task_type"
            android:layout_weight="1"
            android:textSize="18sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efe8e8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Naration"
            android:layout_weight="0.7"
            android:textColor="#100f0f"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="naration"
            android:textColor="#376e8c"
            android:id="@+id/naration"
            android:layout_weight="1"
            android:textSize="18sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efe8e8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textColor="#100f0f"
            android:layout_weight="0.7"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="status"
            android:textColor="#376e8c"
            android:id="@+id/status"
            android:layout_weight="1"
            android:textSize="18sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#efe8e8"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:textColor="#100f0f"
            android:layout_height="wrap_content"
            android:text="Created By"
            android:layout_weight="0.7"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="created by"
            android:id="@+id/created_by"
            android:textColor="#376e8c"
            android:layout_weight="1"
            android:textSize="18sp"/>

    </LinearLayout>


 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dp"
     android:layout_marginBottom="10dp"

     android:orientation="horizontal">

     <Button
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:background="@drawable/button2"
         android:text="Update Task"
         android:layout_weight="2"
         android:layout_marginRight="10dp"
         android:id="@+id/btn_update_task"
         android:textColor="#fff"/>
     <Button
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:background="@drawable/button7"
         android:text="message"
         android:drawableLeft="@drawable/whatsapp"
         android:layout_weight="1.5"
         android:id="@+id/btn_chat_whatsapp"
         android:textColor="#fff"/>

 </LinearLayout>


</LinearLayout>
